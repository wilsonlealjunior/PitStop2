<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sellers_profile_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F5C116"
        android:fitsSystemWindows="false">
        <!-- Header View -->
        <ImageView

            android:id="@+id/logo_pitstop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/pitstop" />

        <View
            android:id="@+id/linha"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/logo_pitstop"
            android:background="@android:color/background_light" />

        <ImageButton
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_pitstop"
            android:layout_margin="10dp"
            android:adjustViewBounds="false"
            android:background="@drawable/button_logout"
            android:clickable="true"
            android:cropToPadding="false"
            android:src="@mipmap/logout" />

        <LinearLayout
            android:id="@+id/inf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linha"
            android:layout_toRightOf="@+id/logout"
            android:background="#F5C116"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="PitStop"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="PitStop"
                android:textColor="@color/white"
                android:textSize="13sp"


                android:textStyle="bold" />

            <TextView
                android:id="@+id/loja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="PitStop"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>